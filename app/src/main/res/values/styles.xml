<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">

            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">0dp</item>
            <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/spacing_16</item>
            <item name="android:layout_marginBottom">@dimen/spacing_16</item>
            <item name="android:layout_weight">1</item>
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">@dimen/text_normal</item>
            <item name="cornerRadius">@dimen/radius_16dp</item>
            <item name="iconGravity">textStart</item>
            <item name="iconPadding">@dimen/spacing_8</item>
            <item name="iconSize">@dimen/icon_size_normal</item>
            <item name="iconTint">@color/black</item>
            <item name="android:insetTop">0dp</item>
            <item name="android:insetBottom">0dp</item>

    </style>

    <style name="SettingsMenuItemStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>

    </style>

    <style name="SettingsMenuItemTextStyle">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_medium</item>

    </style>

    <style name="SettingsMenuItemIconStyle">

        <item name="android:layout_width">@dimen/icon_size_normal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@null</item>
        <item name="tint">?attr/customColorDrawableValue</item>

    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">1</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="trackTintMode">src_in</item>

    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>

    </style>

    <style name="TitleBackArrow">

        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:gravity">top</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:theme">@style/exampleCursor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="hintTextColor">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grey_light</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8dp</item>
        <item name="endIconDrawable">@drawable/ic_clear_24</item>
        <item name="endIconTint">?android:attr/textColorHintInverse</item>
        <item name="endIconMode">clear_text</item>

    </style>

    <style name="TextInputEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:drawableStart">@drawable/ic_search_19</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="android:drawablePadding">@dimen/spacing_8</item>
        <item name="android:paddingStart">@dimen/spacing_12</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>

    </style>

    <style name="track_list_image_style">

            <item name="android:layout_width">45dp</item>
            <item name="android:layout_height">45dp</item>
            <item name="android:layout_marginTop">@dimen/radius_8dp</item>
            <item name="android:gravity">start</item>

    </style>

        <style name="track_list_text_view">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

</resources>