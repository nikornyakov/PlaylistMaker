<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="customColorDrawableValue">@color/grey</item>
        <item name="colorSurface">@color/grey_light</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="colorOnPrimarySurface">@color/grey</item>
        <item name="android:textColorHintInverse">@color/grey</item>

    </style>

    <style name="exampleCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">

        <item name="colorOnSecondary">@color/white</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarButtonStyle</item>

    </style>

    <style name="DayNightSwitchStyle" parent="SwitchStyle">

        <item name="thumbTint">@color/grey</item>
        <item name="trackTint">@color/grey_light</item>

    </style>

    <style name="ToolbarButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">

        <item name="tint">?attr/colorOnPrimary</item>

    </style>

</resources>